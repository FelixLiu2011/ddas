<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ddas.sns.userfriend.mapper.UserFriendMapper">
    <resultMap type="com.ddas.sns.userfriend.domain.UserFriend" id="userFriendMap">
        <result column="user_id" property="userId"/>
        <result column="friend_id" property="friendId"/>
        <result column="friend_name" property="friendName"/>
        <result column="group_id" property="groupId"/>
        <result column="group_name" property="groupName"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <select id="getUserFriendList" parameterType="String" resultMap="userFriendMap">
        SELECT * FROM osf.user_friend where user_id = #{id};
    </select>
    
    <update id="update" parameterType="com.ddas.sns.userfriend.domain.UserFriend">
        UPDATE osf.user_friend SET group_name = #{groupName} where user_id = #{userId} AND friend_id = #{friendId}
    </update>
</mapper>